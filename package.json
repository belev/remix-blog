{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:css-prod build:remix",
    "postbuild": "run-p generate:sitemap generate:rss",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css-prod": "npm run build:css -- --env production",
    "build:remix": "remix build",
    "dev": "run-p dev:css dev:server",
    "dev:server": "remix dev",
    "dev:css": "npm run build:css -- --w",
    "generate:sitemap": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-sitemap.mjs",
    "generate:rss": "NODE_OPTIONS='--experimental-json-modules' node ./scripts/generate-rss.mjs"
  },
  "dependencies": {
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "@remix-run/vercel": "^1.6.7",
    "@vercel/node": "^2.4.4",
    "clsx": "^1.2.1",
    "gray-matter": "^4.0.3",
    "invariant": "^2.2.4",
    "lodash.kebabcase": "^4.1.1",
    "mdx-bundler": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reading-time": "^1.5.0",
    "rehype-prism-plus": "^1.4.2",
    "remark-mdx-images": "^2.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@types/invariant": "^2.2.35",
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/node": "^18.6.2",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "eslint": "^8.20.0",
    "globby": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rss": "^1.2.2",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4"
  },
  "engines": {
    "node": ">=14"
  }
}
