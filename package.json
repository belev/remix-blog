{
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "run-s build:css-prod generate:all build:remix",
    "build:css": "postcss styles/**/*.css --base styles --dir app/styles",
    "build:css-prod": "yarn build:css -- --env production",
    "build:remix": "remix build",
    "dev": "run-p dev:css dev:posts dev:server",
    "dev:css": "yarn build:css -- --w",
    "dev:posts": "watch 'yarn generate:posts' ./app/posts",
    "dev:server": "remix dev",
    "generate:all": "run-p generate:sitemap generate:rss generate:posts",
    "generate:sitemap": "node -r esbuild-register ./scripts/generate-sitemap.ts",
    "generate:rss": "node -r esbuild-register ./scripts/generate-rss.ts",
    "generate:posts": "node -r esbuild-register ./scripts/generate-posts.ts",
    "start": "cross-env NODE_ENV=production netlify dev"
  },
  "dependencies": {
    "@netlify/functions": "^1.0.0",
    "@remix-run/netlify": "^1.6.7",
    "@remix-run/node": "^1.6.7",
    "@remix-run/react": "^1.6.7",
    "clsx": "^1.2.1",
    "cross-env": "^7.0.3",
    "gray-matter": "^4.0.3",
    "invariant": "^2.2.4",
    "lodash.kebabcase": "^4.1.1",
    "mdx-bundler": "^8.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "reading-time": "^1.5.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.6.7",
    "@remix-run/eslint-config": "^1.6.7",
    "@remix-run/serve": "^1.6.7",
    "@types/invariant": "^2.2.35",
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/node": "^18.6.2",
    "@types/prettier": "^2.7.0",
    "@types/react": "^17.0.47",
    "@types/react-dom": "^17.0.17",
    "@types/rss": "^0.0.29",
    "autoprefixer": "^10.4.7",
    "cssnano": "^5.1.12",
    "esbuild": "^0.14.53",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.20.0",
    "globby": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.13",
    "rehype-prism-plus": "^1.4.2",
    "remark-mdx-images": "^2.0.0",
    "rss": "^1.2.2",
    "tailwindcss": "^3.1.6",
    "typescript": "^4.7.4",
    "watch": "^1.0.2"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@3.2.2"
}
